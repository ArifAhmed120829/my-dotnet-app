@{
    ViewData["Title"] = "Home Page";
}

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">My Awesome App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">Welcome to My Awesome App!</h1>
    <p>This app was deployed using Jenkins CI/CD pipeline! 🚀</p>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <h1> testing </h1>
    <p><strong>Last updated:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss")</p>

    <!-- Added Button -->
    <a href="#" class="btn btn-primary mt-3">Get Started</a>
</div>

<!-- Footer -->
<footer class="mt-5 py-3 bg-dark text-white text-center">
    <div class="container">
        <p>&copy; @DateTime.Now.Year My Awesome App. All rights reserved.</p>
    </div>
</footer>

<!-- Bootstrap CSS for styling -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap JS for navbar functionality -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>